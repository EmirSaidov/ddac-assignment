@model UserModel
@{
    ViewData["Title"] = "Change Password";
}

<button class="btn btn-secondary" asp-action="Edit">Back</button>
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Password">
            <hr />
            <input type="hidden" asp-for="@Model.ID" />
            <div class="form-group">
                <label asp-for="@Model.password"></label>
                <input asp-for="@Model.password" class="form-control" />
                <span asp-validation-for="@Model.password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" name="ConfirmPassword" class="form-control" />
            </div>
            <div class="text-danger">@Html.ValidationMessage("ValidationError")</div>
            @if (TempData["password_status"] != null)
            {
                <div class="text-success">
                    @TempData["password_status"]
                </div>
            }
            <button class="btn btn-primary" asp-action="Password">Change Password</button>
        </form>
    </div>
</div>
