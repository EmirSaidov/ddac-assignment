@model ProductModel
@{
    ViewData["Title"] = "Product Display";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewProducts" method="post">
            <h4>View all products.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input placeholder="Search" />
                <button type="button" class="btn btn-light">Search</button>
            </div>
            <div class="form-group">
                <label asp-for="@Model.product_name"></label>
                <span asp-validation-for="@Model.product_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.product_image"></label>
                <span asp-validation-for="@Model.product_image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.product_price"></label>
                <span asp-validation-for="@Model.product_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.product_description"></label>
                <span asp-validation-for="@Model.product_description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Pay">Add To Cart</button>
        </form>
    </div>
