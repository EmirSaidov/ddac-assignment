@model ReceiptModel
@{
    ViewData["Title"] = "Receipt";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewReceipt" method="post">
            <h4>Receipt.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.company_name"></label>
                <span asp-validation-for="@Model.company_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.receipt_product_name"></label>
                <span asp-validation-for="@Model.receipt_product_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.receipt_product_price"></label>
                <span asp-validation-for="@Model.receipt_product_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.total_price"></label>
                <span asp-validation-for="@Model.total_price" class="text-danger"></span>
            </div>
        </form>
    </div>
