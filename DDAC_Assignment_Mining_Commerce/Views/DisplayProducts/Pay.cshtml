@model PayModel
@{
    ViewData["Title"] = "Pay Page";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewPay" method="post">
            <h4>Pay.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.fullname"></label>
                <input asp-for="@Model.fullname" class="form-control" />
                <span asp-validation-for="@Model.fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.phone"></label>
                <input asp-for="@Model.phone" class="form-control" />
                <span asp-validation-for="@Model.phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.card"></label>
                <input asp-for="@Model.card" class="form-control" />
                <span asp-validation-for="@Model.card" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.cvc"></label>
                <input asp-for="@Model.cvc" class="form-control" />
                <span asp-validation-for="@Model.cvc" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Receipt">Pay</button>
        </form>
    </div>
